.fatherBox{
  position: absolute;
  width: 100%;
  height: 100%;
}
.analysis{
  width: 100%;
  height: auto;
  border-bottom: 2rpx solid rgba(195, 186, 248, 0.227);
  background-color: white;
  box-shadow:  0rpx 0rpx 10rpx 0rpx rgba(195, 186, 248, 0.227);
  z-index: 1;
}
.analysis .analysisTitle{
  width: 100%;
  height: 70rpx;
  background-color: #868effa6;
  padding: 10rpx 20rpx 0 20rpx;
  display: flex;
  align-items: center;
}
.analysis .analysisTitle .avatar{
  width: 50rpx;
  height: 50rpx;
  border: 1rpx solid gray;
  border-radius: 50%;
  margin-right: 10rpx;
}
.analysis .analysisTitle .userName{
  height: auto;
  width: auto;
  font-size: 25rpx;
  font-weight: 500;
  margin-right: 10rpx;
}
.analysis .analysisLabel{
  width: 100%;
  height: auto;
  padding: 0 30rpx 10rpx 30rpx;
  box-sizing: border-box;
  background: linear-gradient(#868effa6,rgba(195, 186, 248, 0.227));
}
.analysis .analysisLabel .content{
  height: 100%;
  width: 100%;
  font-size: 30rpx;
  font-weight: 700;
  color: black;
  word-wrap: break-word;/*以下为文字换行代码*/
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: pre-line;
  text-align: justify;/* 实现文字右端对齐 */
}
.analysis .analysisLabel .bottom{
  height: auto;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0 0 0;
}
.analysis .analysisLabel .bottom .time{
  width: auto;
  height: auto;
  color: gray;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.analysis .analysisLabel .bottom .good{
  height: auto;
  width: auto;
  color: gray;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.analysis .analysisLabel .bottom .good .count{
  width: auto;
  height: auto;
  color: gray;
  font-size: 30rpx;
  line-height: 50rpx;
}

.steps{
  padding-bottom: 110rpx;
}
.steps .van-step{
  margin-right: 20rpx;
  border-bottom: 1rpx solid rgba(128, 128, 128, 0.31);
}
.steps .text{
  word-wrap: break-word;/*以下为文字换行代码*/
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: pre-line;
  text-align: justify;/* 实现文字右端对齐 */
}
.steps .van-step__circle-container{
  height: 0;
}

.tabbar{
  width: 100%;
  height: 90rpx;
  padding-bottom: 20rpx;
  background-color: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow:  0rpx 0rpx 20rpx 5rpx rgba(195, 186, 248, 0.227);
  z-index: 10;
}
.tabbar .writeAnalysis{
  width: 80%;
  height: 70%;
  background-color: #868effa6;
  color: white;
  font-size: 40rpx;
  font-weight: 800;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.myAnalysisShow{
  height:650rpx;
  padding:20rpx;
}

/* 富文本编辑器 */
@import "asset/weui.wxss";
@import "asset/iconfont.wxss";
.myAnalysisShow .container {
  width: 100%;
  height: 450rpx;
  margin: 20rpx 0 100rpx 0;
  padding: 0;
  background-color: white;
}
.myAnalysisShow .ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 450rpx;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}
.myAnalysisShow .ql-active {
  color: #22C704;
}
.myAnalysisShow .iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}
.myAnalysisShow .toolbar {
  box-sizing: border-box;
  background-color: white;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}
/* 富文本编辑器 */