/* pages/mine/mine.wxss */
.background{
  z-index: 0;
  filter: blur(10rpx);
  transform: scale(1.2);/*去虚化后出现的白边*/
  /* position: relative; */
}

.avatar{
  width: 250rpx;
  height: 250rpx;
  /* margin: 20rpx; */
  border: 20rpx solid rgba(255, 255, 255, 0.678);
  border-radius: 50%;
  box-shadow:0 0 20rpx rgba(128, 128, 128, 0.651);
  z-index: 80;
}

.images{
  width: 130rpx;
  height: 130rpx;
  margin: 20rpx;
  /* border: 5rpx solid rgba(67, 242, 255, 0.63); */
  border-radius: 50%;
  /* opacity: 0.7; */
  z-index: 20;
}

.motto{
  display: flex;
  justify-content: center;
  flex-wrap: nowrap;
  z-index: 20;
  width: 100%;
  height: 80rpx;
}
.motto text{
  width: 560rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding-bottom: 6rpx;
  flex-wrap: wrap;
  border-radius: 15rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.274);
  background: rgba(255, 255, 255, 0.514);
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.534);
  color: rgb(0, 0, 0);
  opacity: 0;
}

.box{
  display: flex;
  height: 100rpx;
  flex-wrap: nowrap;
  margin-top: 10rpx;
  opacity: 0;
}
.box .title{
  width: 200rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.274);
  background: rgba(255, 255, 255, 0.514);
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.534);
  color: rgb(0, 0, 0);
}
.box .info{
  width: 400rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  word-break: break-all;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.377);
  border-right: 2rpx solid rgba(255, 255, 255, 0.377);
  border-top: 2rpx solid rgba(255, 255, 255, 0.377);
  background: rgba(255, 255, 255, 0.514);
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.534);
  color: rgb(0, 0, 0);
}

.mask{
  background: rgba(128, 128, 128, 0.459);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap; 
}
.mask .input{
  width: 600rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 70rpx;
  word-break: break-all;
  border: 2rpx solid rgba(255, 255, 255, 0.377);
  background: rgba(255, 255, 255, 0.801);
  border-radius: 15rpx;
}
.mask .mottoInput{
  width: 600rpx;
  height: 400rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  word-break: break-all;
  padding-bottom: 60rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.377);
  background: rgba(255, 255, 255, 0.801);
  border-radius: 15rpx;
}
.mask .mottoInput .currentWordNumber {
  position: absolute;
  font-size: 40rpx;
  bottom: -20rpx;
  right: 10rpx;
  color: #888;
}
.mask .bottom{
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.onClearEvent{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 10rpx;
  bottom: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.clearicon{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
}