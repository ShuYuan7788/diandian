/* pages/previewpaper/previewanswer.wxss */
.title-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: 800;
}

.question-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.question-class{
  width: 680rpx;
}

.tag-class{
  width: inherit;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.question-title-container{
  width: inherit;
}

.question-title{
  font-size: 35rpx;
  color: #424547;
  word-wrap: break-word;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: pre-line;
}

.question-options-container{
  width: 650rpx;
  margin: 30rpx 0;
}

.star-img{
  width: 40rpx;
  height: 40rpx;
}

.official-container{
  width: 100%;
  display: flex;
  justify-content: center;
  margin:30rpx 0;
}

.official-answer-container{
  width: 650rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 1px 1px 3px 0px #e2e2e2;
  padding: 15rpx;
}


.official-answer{
  font-size: 35rpx;
  word-break: break-all;
}

.options{
  margin:20rpx 0;
}