/* pages/previewpaper/previewpaper.wxss */
.title-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  font-weight: 800;
}

.question-container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.question-class{
  width: 680rpx;
  border-bottom: 1px solid #e9e9e9;
}

.tag-class{
  width: inherit;
  height: 70rpx;
}

.question-title-container{
  width: inherit;
}

.question-title{
  font-size: 35rpx;
  color: #424547;
  word-wrap: break-word;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: pre-line;
}

.question-options-container{
  width: 650rpx;
  margin: 30rpx 0;
}

.more-container{
  width: initial;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 20rpx;
}

.more-img{
  width: 50rpx;
  height: 50rpx;
}

.star-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 50rpx;
}

.download-container{
  position: fixed;
  z-index: 99;
  bottom: 0;
  width: 100%;
  height: 137rpx;
  background-color: white;
  border-top: 1rpx solid #f0f0f0;
}

.download-group{
  width: 100%;
  height: inherit;
  display: flex;
  align-items: center;
  justify-content: center;
}

.donwload-bottom{
  width: 400rpx;
  height: 88rpx;
  background-color: #DDFAE4;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  box-shadow: 0px 2px 6px 0px #cecece;
}

.margin-bottom{
  width: 100%;
  height: 150rpx;
}

.options{
  margin:20rpx 0;
}